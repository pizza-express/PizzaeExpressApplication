<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ecnu.pizzaexpressapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name=".base.PizzaExpressBaseApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".main.MainActivity">
        </activity>
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".login.LoginActivity">
        </activity>
        <activity android:name=".order.OrderActivity">
        </activity>
        <activity android:name=".order.OrderDetailActivity">
        </activity>
        <activity android:name=".Information.api.InformationChangeActivity">
        </activity>
        <activity android:name=".Information.api.InformationViewActivity">
        </activity>
    </application>

</manifest>