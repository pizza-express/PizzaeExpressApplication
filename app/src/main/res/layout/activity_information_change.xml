<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.ecnu.pizzaexpressapplication.Information.api.InformationChangeActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="用户昵称:"
                android:layout_width="63dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="109dp"
                tools:layout_editor_absoluteX="16dp" android:id="@+id/tv_user_name"/>
        <EditText
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_user_name" tools:layout_editor_absoluteY="101dp"
                tools:layout_editor_absoluteX="80dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="手机号："
                android:layout_width="63dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="270dp"
                tools:layout_editor_absoluteX="16dp" android:id="@+id/tv_user_phonenum"/>
        <EditText
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_user_phonenum" tools:layout_editor_absoluteY="262dp"
                tools:layout_editor_absoluteX="80dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="地址："
                android:layout_width="63dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="325dp"
                tools:layout_editor_absoluteX="16dp" android:id="@+id/tv_user_address"/>
        <EditText
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_user_address" tools:layout_editor_absoluteY="317dp"
                tools:layout_editor_absoluteX="80dp"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="微信号："
                android:layout_width="63dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="165dp"
                tools:layout_editor_absoluteX="16dp" android:id="@+id/tv_user_vx"/>
        <EditText
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_user_vx" tools:layout_editor_absoluteY="157dp"
                tools:layout_editor_absoluteX="80dp"/>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >
        <TextView
                android:text="QQ号:"
                android:layout_width="63dp"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="216dp"
                tools:layout_editor_absoluteX="16dp" android:id="@+id/tv_user_qq"/>
        <EditText
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/et_user_qq" tools:layout_editor_absoluteY="208dp"
                tools:layout_editor_absoluteX="80dp"/>
    </LinearLayout>


    <Button
            android:text="确认修改"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="374dp"
            tools:layout_editor_absoluteX="160dp" android:id="@+id/bt_update"/>
</LinearLayout>